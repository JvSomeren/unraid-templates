<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>invoiceninja</Name>
  <Description></Description>
  <Registry>https://hub.docker.com/r/invoiceninja/invoiceninja/</Registry>
  <GitHub>https://github.com/invoiceninja/invoiceninja</GitHub>
  <Repository>invoiceninja/invoiceninja</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>9000</HostPort>
        <ContainerPort>9000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>APP_URL</Name>
      <Value>http://ninja.dev</Value>
    </Variable>
    <Variable>
      <Name>APP_KEY</Name>
      <Value></Value>
      <Description>Generate please</Description>
      <Mask>true</Mask>
    </Variable>
    <Variable>
      <Name>DB_TYPE</Name>
      <Value>postgresql</Value>
      <Description>mysql / postgresql / sqlite</Description>
    </Variable>
    <Variable>
      <Name>DB_STRICT</Name>
      <Value>false</Value>
    </Variable>
    <Variable>
      <Name>DB_HOST</Name>
      <Value>localhost</Value>
    </Variable>
    <Variable>
      <Name>DB_DATABASE</Name>
      <Value>invoiceninja</Value>
    </Variable>
    <Variable>
      <Name>DB_USER</Name>
      <Value>invoiceninja</Value>
    </Variable>
    <Variable>
      <Name>DB_PASSWORD</Name>
      <Value>invoiceninja</Value>
      <Mask>true</Mask>
    </Variable>
    <Variable>
      <Name>APP_ENV</Name>
      <Value>production</Value>
      <Display>advanced</Display>
    </Variable>
    <Variable>
      <Name>APP_DEBUG</Name>
      <Value>0</Value>
      <Display>advanced</Display>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/invoiceninja/public</HostDir>
      <ContainerDir>/var/app/public</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/invoiceninja/storage</HostDir>
      <ContainerDir>/var/app/storage</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:9000]/</WebUI>
  <Version></Version>
  <Icon>https://raw.githubusercontent.com/JvSomeren/unraid-templates/master/icons/invoiceninja.png</Icon>
  <Beta>False</Beta>
  <Category>Network:Other</Category>
  <Date>2021-11-11</Date>
</Container>
